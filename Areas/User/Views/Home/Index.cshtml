@model IEnumerable<BookingTour.Models.Tours>

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<script src="https://cdn.tailwindcss.com"></script>


<div class="grid grid-cols-3 gap-4 w-[1200px] m-auto mt-[100px]">
    @foreach (var item in Model)
    {

        <a  asp-controller="Detail" asp-action="Index" asp-route-id="@item.Id" style="text-decoration: none;" class="bg-white border border-[#dddfe2] border-solid rounded-[10px] text-[#2d4271] font-bold block mb-[12px] mt-[12px] h-[500px]">
           
        <div class=" ">
            <div class="relative h-[250px]">
                <div class="absolute h-full w-full">
                    <img class="w-full h-full object-cover" src="@Html.DisplayFor(modelItem => item.Image)" alt="">
                </div>
                <div class="absolute top-[10px] right-[3%]">
                    <div class="w-[40px] h-[25px] bg-[#fdc432] flex justify-center rounded-[5px]">
                        <span class="text-[16px] font-bold">@item.Rate <i class="fas fa-star"></i> </span>
                    </div>
                </div>
                <div class="absolute top-[10px] left-[3%]">
                    <div class="p-[6px] bg-[red] flex justify-center rounded-[10px]">
                        @if(item.AvailableSeats > 0 )
                        {
                            
                            <span class="text-[12px] text-white font-bold">Còn chỗ </span>
                        }else
                        { 
                        <span class="text-[12px] text-white font-bold">Hết chỗ </span> 
                        }
                    </div>
                </div>
            </div>
            <div class="px-[8px] py-[12px]">
                <div>
                    <span>
                        @item.StartDate.Value.Day/@item.StartDate.Value.Month/@item.StartDate.Value.Year  -
                        @item.EndDate.Value.Day/@item.EndDate.Value.Month/@item.EndDate.Value.Year
                    </span>
                </div>
                <div class="">
                    <div class="h-[50px]" style=" display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                            @item.Name
                    </div>
                        
                  
                    <span class="mt-4 block">Nơi khởi hành: @item.FocusPlace</span>
                </div>
                <div class="text-[#e01600] text-[16px] font-bold mt-[8px]">
                    Giá người lớn: @string.Format("{0:N0}", item.PriceAdult) VNĐ
                </div>
                <div class="text-[#e01600] text-[16px] font-bold mt-[8px]">
                    Giá người lớn: @string.Format("{0:N0}", item.PriceChildren) VNĐ
                </div>
            </div>
        </div>
        </a>
    }

</div>